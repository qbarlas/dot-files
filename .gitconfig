[core]
	editor = vim
	filemode = false
	attributesfile = /home/quentin/.gitattributes
	filemode = false
	excludesFile = ~/.gitignore
	autocrlf = false
	pager = less -F -X
	
[color]
  ui = auto
  
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = cyan 
  
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
  
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
  
[http]
  sslverify = true
  
[alias]
  s = status -sb
  ci = commit
  cim = commit -m 
  cis = commit -S
  b = branch
  br = branch -r
  co = checkout
  cob = checkout -b
  d = diff
  dc = diff --cached
  l = log -n 1 --pretty='format:%h %s' 
  lg = log -p
  lb = log --first-parent --oneline --no-merges --decorate --pretty=format:'%C(yellow)%h%Creset%C(bold red)%d %Creset%s %Cgreen(%cr)%C(bold blue) <%an>%Creset' --abbrev-commit --date=relative
  lol = log --graph --decorate --pretty=format:'%C(yellow)%h%Creset%C(bold red)%d %Creset%s %Cgreen(%cr)%C(bold blue) <%an>%Creset' --abbrev-commit --date=relative
  ls = ls-files
  ign = ls-files -o -i --exclude-standard
  ru = remote update
  pulp = pull --prune
  rbi = rebase -i --autosquash
  rbc = rebase --continue
  sha  = rev-parse --short HEAD
  cif  = commit --fixup
  aa  = commit --amend --no-edit
  cp  = cherry-pick
  mb  = branch -m


